<div class="card">
    <div class="card-header">
        <h2>Detalles del Rol</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" class="form-control" value="{{rol.nombre}}" readonly>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Descripci√≥n</label>
                <textarea class="form-control" rows="3" readonly>{{rol.descripcion}}</textarea>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Estado</label>
                <input type="text" class="form-control" value="{{#if (eq rol.estado 1)}}Habilitado{{else}}Inhabilitado{{/if}}" readonly>
            </div>
        </div>

        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="/roles" class="btn btn-secondary me-md-2">Volver</a>
            <a href="/roles/editar/{{rol.id}}" class="btn btn-primary">Editar</a>
        </div>
    </div>
</div> 