<div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Lista de Usuarios</h2>
    <a href="/usuarios/crear" class="btn btn-primary">Nuevo Usuario</a>
</div>

<form method="GET" action="/usuarios" class="mb-4">
    <div class="row">
        <div class="col-md-4">
            <select name="estado" class="form-select" onchange="this.form.submit()">
                <option value="">Todos</option>
                <option value="1">Habilitados</option>
                <option value="0">Inhabilitados</option>
            </select>
        </div>
    </div>
</form>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Documento</th>
                <th>Correo</th>
                <th>Celular</th>
                <th>Rol</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each usuarios}}
            <tr>
                <td>{{this.nombres}}</td>
                <td>{{this.apellidos}}</td>
                <td>{{this.documento}}</td>
                <td>{{this.correo}}</td>
                <td>{{this.celular}}</td>
                <td>{{this.rol_nombre}}</td>
                <td>{{#if (eq this.estado 1)}}Habilitado{{else}}Inhabilitado{{/if}}</td>
                <td>
                    <a href="/usuarios/editar/{{this.id}}" class="btn btn-sm btn-warning">Editar</a>
                    <a href="/usuarios/ver/{{this.id}}" class="btn btn-sm btn-info">Ver</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div> 